<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.concussionconnect.Controller.LoginActivity">

    <View
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:background="@drawable/gradient_bg" />

    <TextView
        android:id="@+id/editTextRegistrationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/mulish"
        android:text="Hello"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="48dp" />

    <TextView
        android:id="@+id/SignInToAccountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextRegistrationTitle"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/mulish"
        android:text="Sign in to your account"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextRegistrationTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/less_rounded_corners"
        android:fontFamily="@font/nunito"
        android:hint="   E-mail"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textRegisterHere"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textForgotPassword"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/nunito"
        android:text="Need an account? Register here!"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignParentLeft="true"

        android:layout_marginLeft="1dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/nunito"
        android:text="Forgot Password?"
        android:textAlignment="center"
        android:textColor="#3E92FF"
        android:textSize="19dp" />

    <Button
        android:id="@+id/researchAppButton"
        android:layout_width="293.43dp"
        android:layout_height="51.06dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/custom_rounded_corners"
        android:fontFamily="@font/nunito"
        android:text="Click for Research App"
        android:textColor="#006FFF"
        android:textSize="17dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="293.43dp"
        android:layout_height="51.06dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/custom_rounded_shape"
        android:fontFamily="@font/nunito"
        android:text="Login"
        android:textColor="#FFF"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/less_rounded_corners"
        android:fontFamily="@font/nunito"
        android:hint="   Password"
        android:inputType="textPassword" />

</RelativeLayout>