<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.concussionconnect.Controller.TestSetupActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_bg"
        android:fontFamily="@font/mulish"
        android:text="Assessment Setup"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/personNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="text" />

    <Spinner
        android:id="@+id/wordListSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/personNameEditText"
        android:layout_marginTop="65dp"
        android:dropDownWidth="match_parent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/custom_rounded_shape"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/nunito"
        android:inputType="textCapSentences"
        android:text="Next"
        android:textColor="#FFF"
        android:textSize="17dp"  />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:text="Which memory list would you like to use?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/wordListSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="33dp"
        android:paddingBottom="10dp"
        android:text="Who is being assessed?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/participantID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partIDQuestion"
        android:layout_marginTop="-115dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/partNameQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nextButton"
        android:layout_alignBottom="@id/wordListSpinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="-51dp"
        android:text="What is the participant's name?"
        android:textSize="18sp"
        tools:textAlignment="center"
        tools:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/partIDQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/participantName"
        android:layout_marginTop="-110dp"
        android:layout_marginBottom="136dp"
        android:text="What is the participant's ID?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        tools:textAlignment="center" />

    <EditText
        android:id="@+id/participantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partNameQuestion"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="127dp"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>
