<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.concussionconnect.Controller.ChangePasswordActivity">

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/custom_rounded_shape"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/nunito"
        android:inputType="textCapSentences"
        android:text="Change Password"
        android:textColor="#FFF"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/textNewPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/textNewPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textNewPassword1"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Confirm New Password"
        android:inputType="textPassword" />
</RelativeLayout>
