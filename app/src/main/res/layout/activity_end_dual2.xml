<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context="com.github.concussionconnect.Controller.EndDual2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Dual2ThanksforTesting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/mulish"
            android:text="Thanks for testing!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/Dual2ScrollMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Scroll if Submit Button is Not Displayed"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Dual2Results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/submitButtonDual2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="400dp"
            android:background="@drawable/custom_rounded_shape"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/nunito"
            android:inputType="textCapSentences"
            android:text="Submit"
            android:textColor="#FFF"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>