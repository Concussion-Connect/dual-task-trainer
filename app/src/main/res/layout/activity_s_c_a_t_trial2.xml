<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.concussionconnect.Controller.WordLearnActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView134"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/SCATTrial2"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="40dp"
        android:text="What words do they remember?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />


    <CheckedTextView
        android:id="@+id/SCATWord1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/SCATTrial2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="-115dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:text="CheckedTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <CheckedTextView
        android:id="@+id/SCATWord2"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignBottom="@id/SCATWord1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        android:layout_marginBottom="-147dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:text="CheckedTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <CheckedTextView
        android:id="@+id/SCATWord3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/SCATWord2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="-209dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:text="CheckedTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <CheckedTextView
        android:id="@+id/SCATWord4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/SCATWord3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="-255dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:text="CheckedTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <CheckedTextView
        android:id="@+id/SCATWord5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/SCATWord4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="299dp"
        android:layout_marginBottom="-298dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:clickable="true"
        android:text="CheckedTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/nextFromTrial2SCAT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />


    <EditText
        android:id="@+id/errorTextForSCAT2"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/SCATMem2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:text="0"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SCATMem2"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/SCATWord5"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="22dp"
        android:text="Words Memorized"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/SCATTrial2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-128dp"
        android:layout_marginLeft="-128dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/SCATMem2"
        android:layout_toRightOf="@+id/SCATMem2"
        android:text="Trial 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>

