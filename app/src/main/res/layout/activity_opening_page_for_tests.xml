<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.OpeningPageForTests"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/testsPage"
        android:text="Tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_bg"
        android:fontFamily="@font/mulish"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/verticalSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#2C2B2B"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sessionID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your session ID is ######."
        android:fontFamily="@font/mulish"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#2C2B2B"
        android:textSize="18sp" />

    <CheckedTextView
        android:id="@+id/BESStest"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="20dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="BESS Test"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckedTextView
        android:id="@+id/SCATtest"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:text="SCAT Test"
        android:textSize="30sp"
        android:textStyle="bold"
        android:checked="false"/>

    <CheckedTextView
        android:id="@+id/Dual1test"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:text="Dual Test 1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:checked="false"/>

    <CheckedTextView
        android:id="@+id/Dual2test"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="Dual Test 2"
        android:paddingHorizontal="20dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/backToMain"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:layout_marginStart="7dp"
            android:background="@drawable/custom_rounded_shape"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/nunito"
            android:inputType="textCapSentences"
            android:textColor="#FFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Tests"
            android:layout_marginStart="7dp"
            android:background="@drawable/custom_rounded_shape"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/nunito"
            android:inputType="textCapSentences"
            android:textColor="#FFF"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>