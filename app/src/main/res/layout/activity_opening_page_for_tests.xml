<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.OpeningPageForTests"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/testsPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tests"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView129"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click A Test"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#2C2B2B" />

    <CheckedTextView
        android:id="@+id/BESStest"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="100dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="BESS Test"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckedTextView
        android:id="@+id/SCATtest"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:text="SCAT Test"
        android:textSize="30sp"
        android:textStyle="bold"
        android:checked="false"/>

    <CheckedTextView
        android:id="@+id/Dual1test"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:text="Dual Test 1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:checked="false"/>

    <CheckedTextView
        android:id="@+id/Dual2test"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_marginTop="15dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:text="Dual Test 2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="110dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back to Main" />

        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset Tests" />
    </LinearLayout>

</LinearLayout>